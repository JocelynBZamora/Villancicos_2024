@model Villancicos2024.Models.ViewModels.EditarViewModel
@{
	Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section>
	<form method="post" action="~/Home/Editar">

		<div class="caption">
			<h2>Editar villancico</h2>
		</div>
		<input hidden asp-for="Id" id="Id" />
		<label>Nombre:</label>
		<input asp-for="Nombre" type="text" placeholder="@Model.Nombre" />
		<label>Compositor:</label>
		<input asp-for="Compositor" type="text" placeholder="@Model.Compositor" />
		<label>Año:</label>
		<input asp-for="Anyo" type="number" maxlength="4" placeholder="@Model.Anyo" />
		<label>Letra:</label>
		<textarea asp-for="Letra" rows="10" placeholder="@Model.Letra"></textarea>
		<label>Video (URL):</label>
		<input asp-for="Url" type="url" placeholder="@Model.Url" />

		<div class="botones">
			<p id="error">@Html.ValidationSummary(true)</p>
			<input type="submit" value="Editar" />
			<a href="~/Home/Index">Cancelar</a>
		</div>

	</form>

</section>